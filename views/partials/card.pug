mixin card(title, text, imageUrl, buttonUrl, buttonText)
  .card(style="width: 20rem;")
    if imageUrl
      img.card-img-top(src=imageUrl, alt=title)
    else
      img.card-img-top(src="/img/meme/seniors-cash-labor.png", alt=title, style="width: 300px; height: 300px; object-fit: contain;")
    .card-body
      if title
        h5.card-title= title
      if text
        p.card-text= text
      if buttonUrl && buttonText
        a.btn.btn-primary(href=buttonUrl)= buttonText
