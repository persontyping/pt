//- card.pug
//- Usage: include card.pug and pass in locals: title, text, imageUrl, buttonUrl, buttonText

div.card(style="width: 18rem;")
  if imageUrl
    img.card-img-top(src=imageUrl, alt=title)
  else
    img.card-img-top(src="https://imageslot.com/v1/1080x1080?bg=aabb30&fg=ffffff&shadow=23272f&text=%5BIMAGE%5D&filetype=png", alt=title)

  div.card-body
    if title
      h5.card-title= title
    if text
      p.card-text= text
    if buttonUrl && buttonText
      a.btn.btn-primary(href=buttonUrl)= buttonText

