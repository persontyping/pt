extends layout

block content
 .container.p-0.p-md-5.border-blue

    each post in posts
      - var title = post.title
      - var excerpt = post.excerpt || ''
      - var imageUrl = post.imageUrl ? '/img/' + post.imageUrl : '/img/call-me.svg'
      - var buttonUrl = '/blog/' + post._id 
      - var buttonText = 'Read More'
      - var createdAt = post.createdAt ? new Date(post.createdAt).toLocaleString() : ''
   
      .row.d-flex.flex-md-row-reverse.justify-content-center.border-purple.w-md-75
        .col-md-9.col-12.d-flex.align-items-start.justify-content-start.border-red(style="min-height: 80px;" )
          .row.d-flex.align-items-center.justify-content-center
            .col-12.py-2.px-3.w-100.d-flex.text-center.text-md-start.nunito-sans-pt.border-pink
                h2.fs-1.mb-1= title
            .row.border-aqua
              .col-12.pt-3.d-flex.justify-content-center.text-center
                  p.text-muted.mb-2.mynerve-regular Published on #{createdAt}
            .row.border-pink.p-md-5.p-3
              .col-12.d-flex.justify-content-start.nunito-sans-pt.fs-3.font-md-1
                p.mb-2 #[b &ldquo;] #{excerpt} #[b &rdquo;]
        .col-6.col-md-3.d-flex.text-center.align-items-center.justify-content-center.border-yellow
          img(src=imageUrl, alt=title, class="d-block mx-auto" style="width: 100%")  
        .col-12.d-flex.align-items-end.justify-content-center.nunito-sans-pt.text-center.border-green
            a.btn.btn-pink-outline.w-100.py-2.m-3.fs-5(href=buttonUrl)= buttonText
      .row.w-md-25.border-green(style="height: 100%")
