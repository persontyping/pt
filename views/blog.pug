extends layout

block content
 .container.p-0.p-md-5.border-blue
    each post in posts
      - var title = post.title
      - var text = post.excerpt || ''
      - var imageUrl = post.imageUrl ? '/img/' + post.imageUrl : '/img/call-me.svg'
      - var buttonUrl = '/blog/' + post._id 
      - var buttonText = 'Read More'
      - var createdAt = post.createdAt ? new Date(post.createdAt).toLocaleString() : ''
   
      .row.d-flex.flex-md-row-reverse.justify-content-start.border-orange
        .col-md-9.col-12.d-flex.align-items-start.justify-content-start.border-red(style="min-height: 80px;" )
          .row.d-flex.align-items-center.justify-content-center
            .col-12.p-5.w-100.d-flex.text-center.text-md-start.nunito-sans-pt.border-pink
                h2.mb-1= title
            .row.border-aqua
              .col-12.pt-3.d-flex.justify-content-center.text-center
                  p.text-muted.mb-2.mynerve-regular Published on #{createdAt}
            .row.border-pink.p-md-5.p-3
              .col-12.d-flex.justify-content-start.nunito-sans-pt.fs-3.font-md-1
                p.mb-2= text   
        .col-12.col-md-3.d-flex.align-items-center.justify-content-center.border-yellow
          img(src=imageUrl, alt=title,  style="object-fit: contain; width: 100%; max-height: 300px;")  
        .col-md-9.col-12.d-flex.align-items-end.justify-content-center.nunito-sans-pt.text-center.border-green(style="height: 80px;" class="h-md-200")
            a.btn.btn-pink-outline.w-100.py-3.m-1(href=buttonUrl)= buttonText

              
          
