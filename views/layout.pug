doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title Person Typing

    // Bootstrap CSS
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
    link(rel="preconnect", href="https://fonts.googleapis.com")
    link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Mynerve&family=Nunito+Sans:ital,opsz,wght@0,6..12,200..1000;1,6..12,200..1000&display=swap" rel="stylesheet")

    // Your custom styles
    link(rel="stylesheet", href="/stylesheets/style.css")

    // Optional: Prevent font scaling on iOS
    style.
      html {
        -webkit-text-size-adjust: 100%;
        text-size-adjust: 100%;
      }

  body(data-bs-theme="dark")
    header
    include partials/top-nav
    .container.text-light.mx-auto
      h1.text-center.text-md-start= title
      .container.pt-3.mx-auto
        block content

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
