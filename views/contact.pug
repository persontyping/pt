extends layout
block content
  .container.border-blue.pb-5
    .row.g-0.p-0.p-md-5.flex-md-row-reverse
      .col-3.m-0.p-0.d-flex.justify-content-center.align-items-md-start.align-items-end
        img(src="/img/message-us.svg", alt=title, style="width: auto; height: 100px; z-index: 1000; overflow: contain;")
      .col-3.col-md-6.d-flex.justify-content-center.align-items-md-start.align-items-end
        img(src="/img/message-us.svg", alt=title, style="width: auto; height: 100px; z-index: 1000; overflow: contain;")
      .col-3.col-md-6.d-flex.justify-content-center.align-items-md-start.align-items-end
        img(src="/img/message-us.svg", alt=title, style="width: auto; height: 100px; z-index: 1000; overflow: contain;")
      .col-3.col-md-6.d-flex.justify-content-center.align-items-md-start.align-items-end
        img(src="/img/message-us.svg", alt=title, style="width: auto; height: 100px; z-index: 1000; overflow: contain;")
    .row.g-0.p-0
      .col-12.nunito-sans-pt.fs-3.px-5
        form(action='/contact', method='POST')
          .mb-3
            label.form-label(for='name') Name
            input.form-control(type='text', name='name', required)
          .mb-3
            label.form-label(for='email') Email
            input.form-control(type='email', name='email', required)
          .mb-3
            label.form-label(for='message') Message
            textarea.form-control(name='message', rows='15', required)
          button.btn.btn-pink-outline.px-5(type='submit') Send