extends layout
block content
    .row.g-0.p-0.p-md-5
      .col-12.col-md-6.d-flex.justify-content-center.align-items-md-start.align-items-end
        img(src="/img/message-us.svg", alt=title, style="max-width: 100%; height: 300px; z-index: 1000; overflow: contain;")
      .col-12.col-md-6.pt-md-5.border-start.border-bottom
        form(action='/contact', method='POST')
          .mb-3
            label.form-label(for='name') Name
            input.form-control(type='text', name='name', required)
          .mb-3
            label.form-label(for='email') Email
            input.form-control(type='email', name='email', required)
          .mb-3
            label.form-label(for='message') Message
            textarea.form-control(name='message', rows='5', required)
          button.btn.btn-pink-outline.px-5(type='submit') Send